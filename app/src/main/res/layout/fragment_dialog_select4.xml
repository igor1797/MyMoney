<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        >

    <View
            android:id="@+id/viewAllTime"
            android:layout_width="200dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/viewChoseDay"
            app:layout_constraintBottom_toTopOf="@id/ivMonth">
    </View>

    <View
            android:id="@+id/viewChoseDay"
            android:layout_width="200dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/viewAllTime"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/viewChoseYear">
    </View>

    <View
            android:id="@+id/viewChoseMonth"
            android:layout_width="200dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@id/viewAllTime"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/viewChoseYear"
            app:layout_constraintBottom_toBottomOf="parent"
            >
    </View>

    <View
            android:id="@+id/viewChoseYear"
            android:layout_width="200dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@id/viewChoseDay"
            app:layout_constraintStart_toEndOf="@id/viewChoseMonth"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
    </View>

    <ImageView
            android:id="@+id/ivAllTime"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="40dp"
            android:src="@drawable/ic_infinite"
            app:layout_constraintTop_toTopOf="@id/viewAllTime"
            app:layout_constraintStart_toStartOf="@id/viewAllTime"
            app:layout_constraintBottom_toTopOf="@+id/tvAllTime"
            app:layout_constraintEnd_toEndOf="@id/viewAllTime"
            />
    <TextView
            android:id="@+id/tvAllTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cijelo_vrijeme"
            android:textSize="20sp"
            android:layout_marginStart="40dp"
            android:textColor="@color/colorBlack"
            app:layout_constraintBottom_toBottomOf="@id/viewAllTime"
            app:layout_constraintTop_toBottomOf="@id/ivAllTime"
            app:layout_constraintStart_toStartOf="@id/viewAllTime"
            app:layout_constraintEnd_toEndOf="@id/viewAllTime"
            />

    <ImageView
            android:id="@+id/ivDay"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_calendar_day"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="@id/viewChoseDay"
            app:layout_constraintStart_toStartOf="@id/viewChoseDay"
            app:layout_constraintBottom_toTopOf="@+id/tvDay"
            app:layout_constraintEnd_toEndOf="@id/viewChoseDay"
            />
    <TextView
            android:id="@+id/tvDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/odaberite_dan"
            android:textSize="20sp"
            android:layout_marginEnd="40dp"
            android:textColor="@color/colorBlack"
            app:layout_constraintBottom_toBottomOf="@id/viewChoseDay"
            app:layout_constraintTop_toBottomOf="@id/ivDay"
            app:layout_constraintStart_toStartOf="@id/viewChoseDay"
            app:layout_constraintEnd_toEndOf="@id/viewChoseDay"
            />

    <ImageView
            android:id="@+id/ivMonth"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="40dp"
            android:src="@drawable/ic_one"
            app:layout_constraintTop_toTopOf="@id/viewChoseMonth"
            app:layout_constraintStart_toStartOf="@id/viewChoseMonth"
            app:layout_constraintBottom_toTopOf="@+id/tvMonth"
            app:layout_constraintEnd_toEndOf="@id/viewChoseMonth"
            />

    <TextView
            android:id="@+id/tvMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mjesec"
            android:textSize="20sp"
            android:layout_marginStart="40dp"
            android:textColor="@color/colorBlack"
            app:layout_constraintBottom_toBottomOf="@id/viewChoseMonth"
            app:layout_constraintTop_toBottomOf="@id/ivMonth"
            app:layout_constraintStart_toStartOf="@id/viewChoseMonth"
            app:layout_constraintEnd_toEndOf="@id/viewChoseMonth"
            />

    <ImageView
            android:id="@+id/ivYear"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_one"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintTop_toTopOf="@id/viewChoseYear"
            app:layout_constraintStart_toStartOf="@id/viewChoseYear"
            app:layout_constraintBottom_toTopOf="@+id/tvYear"
            app:layout_constraintEnd_toEndOf="@id/viewChoseYear"
            />

    <TextView
            android:id="@+id/tvYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/godina"
            android:textSize="20sp"
            android:layout_marginEnd="40dp"
            android:textColor="@color/colorBlack"
            app:layout_constraintBottom_toBottomOf="@id/viewChoseYear"
            app:layout_constraintTop_toBottomOf="@id/ivYear"
            app:layout_constraintStart_toStartOf="@id/viewChoseYear"
            app:layout_constraintEnd_toEndOf="@id/viewChoseYear"
            />

</androidx.constraintlayout.widget.ConstraintLayout>