<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/colorBlackTrans"
        >
    <TextView
            android:id="@+id/tvMonth"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:text="Siječanj"
            android:textSize="30sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tvYear"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp"
            />

    <TextView
            android:id="@+id/tvYear"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textColor="@color/colorWhite"
            android:text="2019"
            android:gravity="center"
            android:textSize="25sp"
            android:layout_marginStart="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvMonth"
            />

    <TextView
            android:id="@+id/tvExpensesTotalAmount"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textColor="@color/red"
            android:text="-2000"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@id/tvIncomes"
            app:layout_constraintTop_toBottomOf="@id/tvExpenses"
            app:layout_constraintEnd_toEndOf="@id/tvExpenses"/>

    <TextView
            android:id="@+id/tvIncomesTotalAmount"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textColor="@color/lightGreen"
            android:text="+2000"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvIncomes"
            app:layout_constraintEnd_toEndOf="@id/tvIncomes"/>

    <TextView
            android:id="@+id/tvExpenses"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textColor="@color/colorWhite"
            android:text="TROŠKOVI"
            android:textSize="20sp"
            android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toTopOf="@id/tvExpensesTotalAmount"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/tvIncomes"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textColor="@color/colorWhite"
            android:text="PRIMANJA"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@id/tvIncomesTotalAmount"
            app:layout_constraintTop_toBottomOf="@id/tvExpensesTotalAmount"
            app:layout_constraintEnd_toEndOf="@id/tvExpensesTotalAmount"/>

</androidx.constraintlayout.widget.ConstraintLayout>